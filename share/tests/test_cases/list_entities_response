# Response validation for list_entities test
SUCCESS_MARKER="\"entities\":"

# Custom validation function
validate_response() {
  local resp="$1"
  
  # Check if response contains entities array
  if [[ "$resp" == *"\"entities\":"* ]]; then
    # Check if we have total, limit, and offset fields
    if [[ "$resp" == *"\"total\":"* && 
          "$resp" == *"\"limit\":"* && 
          "$resp" == *"\"offset\":"* ]]; then
      return 0
    fi
  fi
  
  return 1
}