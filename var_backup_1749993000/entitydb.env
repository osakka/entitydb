# EntityDB Configuration - Performance Optimized
# Balanced configuration for dashboard functionality with server stability

# Keep logging level at info for performance
ENTITYDB_LOG_LEVEL=info

# Re-enable storage metrics only (lightweight)
ENTITYDB_METRICS_ENABLE_REQUEST_TRACKING=true
ENTITYDB_METRICS_ENABLE_STORAGE_TRACKING=true

# Use longer intervals to reduce load
ENTITYDB_METRICS_INTERVAL=120
ENTITYDB_METRICS_AGGREGATION_INTERVAL=300

# Disable trace subsystems for performance
ENTITYDB_TRACE_SUBSYSTEMS=""

# Keep SSL enabled with optimized timeouts
ENTITYDB_USE_SSL=true
ENTITYDB_HTTP_READ_TIMEOUT=30
ENTITYDB_HTTP_WRITE_TIMEOUT=30
ENTITYDB_HTTP_IDLE_TIMEOUT=60